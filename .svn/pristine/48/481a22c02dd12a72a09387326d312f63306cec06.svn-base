<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.widget.DrawerLayout
	    android:id="@+id/drawer_principal_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

        <gob.inei.dnce.components.FragmentViewPager
            android:id="@+id/pagerPrincipal" 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </gob.inei.dnce.components.FragmentViewPager>
        
        <ListView
            android:id="@+id/left_principal_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/grisaceoclaro"
            android:choiceMode="singleChoice"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />
        
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>