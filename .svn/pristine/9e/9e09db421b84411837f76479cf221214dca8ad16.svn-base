<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowEdit"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical" >
     
<ScrollView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="OBSERVACIONES"
            android:textAppearance="@style/cabecera110"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtOBS_COMMON"
            style="@style/normal"
            android:layout_width="650dp"
            android:layout_height="424dp"
            android:background="@color/cajaweb"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:hint="@string/hintObservacion"
            android:inputType="textCapCharacters|textMultiLine|textNoSuggestions"
            android:maxLength="2000"
            android:maxLines="15"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btnObsCommonAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnAceptar" />

            <Button
                android:id="@+id/btnObsCommonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnCancelar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent" >
    </LinearLayout>

</LinearLayout>

</HorizontalScrollView>
</ScrollView>
</LinearLayout>