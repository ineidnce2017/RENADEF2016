<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Customize style of tables, labels and textfields -->
    <style name="title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/active_color</item>
        <!--item name="fontName">roboto_light</item-->
    </style>

    <style name="header_table">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/active_color</item>
        <!--item name="fontName">roboto_light</item-->
    </style>

    <style name="body_table">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_color</item>
        <!--item name="fontName">roboto_light</item-->
    </style>

    <style name="field">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <!--item name="fontName">roboto_light</item-->
    </style>

    <style name="form_field" parent="field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <!--item name="android:textColor">@color/active_color</item-->
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapCharacters</item>
    </style>

    <style name="form_field_number" parent="form_field">
        <item name="android:inputType">number</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="form_label" parent="field">
        <item name="android:textSize">@dimen/text_size_small</item>
        <!--item name="fontName">roboto_medium</item-->
        <item name="android:textColor">@color/color52</item>
    </style>

    <!-- Customize style of button -->
    <style name="CustomButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <!--item name="fontName">roboto_light</item-->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
</resources>